<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".TyphoonActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_PrecautionaryMeasures"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:textSize="22sp"
            android:text="Tropical Cyclone Warnings"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:background="@drawable/blue_warning"
            android:drawableLeft="@drawable/ic_danger"
            android:textColor="#ffff"
            android:padding="20dp"
            android:layout_marginTop="25dp"/>

        <Button
            android:id="@+id/btn_signal_1"
            android:layout_width="375dp"
            android:layout_height="100dp"
            android:textSize="25sp"
            android:text="Signal No.1"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:padding="30dp"
            android:background="@drawable/blue_warning"
            android:drawableLeft="@drawable/ic_rainy"
            android:textColor="#ffff"
            android:layout_marginTop="30dp"/>

        <Button
            android:id="@+id/btn_signal_2"
            android:layout_width="375dp"
            android:layout_height="100dp"
            android:textSize="25sp"
            android:text="Signal No.2"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:padding="30dp"
            android:background="@drawable/blue_warning"
            android:drawableLeft="@drawable/ic_raining"
            android:textColor="#ffff"
            android:layout_marginTop="20dp"/>

        <Button
        android:id="@+id/btn_signal_3"
        android:layout_width="375dp"
        android:layout_height="100dp"
        android:text="Signal No.3"
        android:textSize="25sp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:padding="30dp"
        android:background="@drawable/blue_warning"
        android:drawableLeft="@drawable/ic_cloud"
        android:textColor="#ffff"
        android:layout_marginTop="20dp"/>

        <Button
        android:id="@+id/btn_signal_4"
        android:layout_width="375dp"
        android:layout_height="100dp"
        android:text="Signal No.4"
        android:textSize="25sp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:padding="30dp"
        android:background="@drawable/blue_warning"
        android:drawableLeft="@drawable/ic_flood"
        android:textColor="#ffff"
        android:layout_marginTop="20dp"/>

        <Button
        android:id="@+id/btn_signal_5"
        android:layout_width="375dp"
        android:layout_height="100dp"
        android:text="Signal No.5"
        android:textSize="25sp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:padding="30dp"
        android:background="@drawable/blue_warning"
        android:drawableLeft="@drawable/ic_typhoon"
        android:textColor="#ffff"
        android:layout_marginTop="20dp"/>





    </LinearLayout>
</ScrollView>