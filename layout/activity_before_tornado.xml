<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".BeforeTornado">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="290dp"
            android:layout_height="100dp"
            android:text="Before the Tornado"
            android:textColor="#ffff"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_before_tornado_icon"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:padding="9dp"
            android:background="@drawable/cardview_gradient"/>



        <!-- What you will do before the tornado -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="20dp"
            android:layout_margin="10dp"
            android:layout_marginTop="25dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/cardview_gradient"
                android:orientation="vertical">




                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" a. Talk about tornadoes with your family so that everyone knows where to go if a tornado warning is issued. Discussing ahead of time helps reduce fear, especially for younger children."
                    android:layout_marginTop="5dp"
                    android:textColor="#ffff"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:textAlignment="gravity"
                    android:padding="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" b. Check at your workplace and your children's schools and day care centers to learn about their tornado emergency plans. Every building has different safe places."
                    android:layout_marginTop="5dp"
                    android:textColor="#ffff"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:textAlignment="gravity"
                    android:padding="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" c. Check emergency kit and replenish any items missing or in short supply. especially medications or other medical supplies. Keep it nearby."
                    android:layout_marginTop="5dp"
                    android:textColor="#ffff"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:textAlignment="gravity"
                    android:padding="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" d. Designate an evacuation area for the family and livestock."
                    android:layout_marginTop="5dp"
                    android:textColor="#ffff"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:textAlignment="gravity"
                    android:padding="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" e. Assign family members instructions and responsibilities according to an evacuation plan."
                    android:layout_marginTop="5dp"
                    android:textColor="#ffff"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:textAlignment="gravity"
                    android:padding="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" f. Keep a stock of food which requires little cooking and refrigeration; electric power may be interrupted."
                    android:layout_marginTop="5dp"
                    android:textColor="#ffff"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:textAlignment="gravity"
                    android:padding="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" g. Keep a transistorized radio and flashlight with spare batteries, emergency cooking equipment, candies, matches and first aid kit handy in case of emergency."
                    android:layout_marginTop="5dp"
                    android:textColor="#ffff"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:textAlignment="gravity"
                    android:padding="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" h. Consider installing permanent shutters to cover windows. Shutters can be closed quickly and provide the safest protection for windows."
                    android:layout_marginTop="5dp"
                    android:textColor="#ffff"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:textAlignment="gravity"
                    android:padding="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" i. Move to an underground shelter, basement or safe room. If none is available, a small, windowless interior room or hallway on the lowest level of a sturdy building is the safest alternative."
                    android:layout_marginTop="5dp"
                    android:textColor="#ffff"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:textAlignment="gravity"
                    android:padding="10dp" />




            </LinearLayout>

        </androidx.cardview.widget.CardView>









    </LinearLayout>

</ScrollView>