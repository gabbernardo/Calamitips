<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".EarthquakeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_Earthquake_PrecautionaryMeasures"
            android:layout_width="300dp"
            android:layout_height="95dp"
            android:textSize="22sp"
            android:text="Earthquake Safety Rules"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:background="@drawable/blue_warning"
            android:drawableLeft="@drawable/ic_earthquake_warning_sign"
            android:textColor="#ffff"
            android:padding="20dp"
            android:layout_marginTop="25dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_before_the_earthquake"
            android:layout_width="375dp"
            android:layout_height="95dp"
            android:text="Before the Earthquake"
            android:textSize="22sp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:background="@drawable/blue_warning"
            android:drawableLeft="@drawable/ic_before_earthquake"
            android:textColor="#ffff"
            android:padding="20dp"
            android:layout_marginTop="25dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_during_the_earthquake"
            android:layout_width="375dp"
            android:layout_height="95dp"
            android:text="During the Earthquake"
            android:textSize="22sp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:background="@drawable/blue_warning"
            android:drawableLeft="@drawable/ic_during_earthquake"
            android:textColor="#ffff"
            android:padding="20dp"
            android:layout_marginTop="25dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_after_the_earthquake"
            android:layout_width="375dp"
            android:layout_height="95dp"
            android:text="After the Earthquake"
            android:textSize="22sp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:background="@drawable/blue_warning"
            android:drawableLeft="@drawable/ic_after_earthquake"
            android:textColor="#ffff"
            android:padding="20dp"
            android:layout_marginTop="25dp"/>











    </LinearLayout>

</ScrollView>