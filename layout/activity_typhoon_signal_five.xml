<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".TyphoonSignalFive">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="230dp"
            android:layout_height="45dp"
            android:text="Signal No. 5"
            android:textColor="#ffff"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_lightning"
            android:layout_gravity="center"
            android:background="@drawable/cardview_gradient"/>

        <!--Damage to Structure -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="20dp"
            android:layout_margin="10dp"
            android:layout_marginTop="25dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/cardview_gradient"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Damage to Structure"
                    android:drawableTop="@drawable/ic_building"
                    android:layout_marginTop="5dp"
                    android:textColor="#ffff"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" a. Widespread damage to high-risk structures"
                    android:layout_marginTop="5dp"
                    android:textColor="#ffff"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:textAlignment="gravity"
                    android:padding="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" b. Very heavy damage to medium-risk structures"
                    android:layout_marginTop="5dp"
                    android:textColor="#ffff"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:textAlignment="gravity"
                    android:padding="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" c. Heavy damage to low-risk structures"
                    android:layout_marginTop="5dp"
                    android:textColor="#ffff"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:textAlignment="gravity"
                    android:padding="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" d. Almost total damage to structures of light in highly exposed coastal areas."
                    android:layout_marginTop="5dp"
                    android:textColor="#ffff"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:textAlignment="gravity"
                    android:padding="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" e. Complete roof failure on many residences and industrial buildings. Severe and extensive window and door damage."
                    android:layout_marginTop="5dp"
                    android:textColor="#ffff"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:textAlignment="gravity"
                    android:padding="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" f. Most residential and institutional buildings of mixed construction may be severely damaged."
                    android:layout_marginTop="5dp"
                    android:textColor="#ffff"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:textAlignment="gravity"
                    android:padding="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" g. Electrical power distribution and communication services severely disrupted."
                    android:layout_marginTop="5dp"
                    android:textColor="#ffff"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:textAlignment="gravity"
                    android:padding="10dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" h. All signs/billboards blown."
                    android:layout_marginTop="5dp"
                    android:textColor="#ffff"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:textAlignment="gravity"
                    android:padding="10dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!--Damage to Vegetation -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="20dp"
            android:layout_margin="10dp"
            android:layout_marginTop="25dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/cardview_gradient"
                android:orientation="vertical">



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Damage to Vegetation"
                    android:drawableTop="@drawable/ic_vegetables"
                    android:layout_marginTop="5dp"
                    android:textColor="#ffff"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" a. Total damage to banana plantation."
                    android:layout_marginTop="5dp"
                    android:textColor="#ffff"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:textAlignment="gravity"
                    android:padding="10dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" b. Most tall trees are broken, uprooted or defoliated."
                    android:layout_marginTop="5dp"
                    android:textColor="#ffff"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:textAlignment="gravity"
                    android:padding="10dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" c. Coconut trees are stooped, broken or uprooted."
                    android:layout_marginTop="5dp"
                    android:textColor="#ffff"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:textAlignment="gravity"
                    android:padding="10dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" d. Few plants and trees survived."
                    android:layout_marginTop="5dp"
                    android:textColor="#ffff"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:textAlignment="gravity"
                    android:padding="10dp"
                    />


            </LinearLayout>

        </androidx.cardview.widget.CardView>






    </LinearLayout>

</ScrollView>