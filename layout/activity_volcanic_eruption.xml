<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".VolcanicEruptionActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_VolcanicEruption_PrecautionaryMeasures"
            android:layout_width="320dp"
            android:layout_height="100dp"
            android:textSize="22sp"
            android:text="Volcanic Eruption Safety Rules"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:background="@drawable/blue_warning"
            android:drawableLeft="@drawable/ic_volcano_icon"
            android:textColor="#ffff"
            android:padding="20dp"
            android:layout_marginTop="25dp"/>

        <Button
            android:id="@+id/btn_before_the_volcanic_eruption"
            android:layout_width="375dp"
            android:layout_height="95dp"
            android:text="Before the Eruption"
            android:textSize="22sp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:background="@drawable/blue_warning"
            android:drawableLeft="@drawable/ic_before_volcano"
            android:textColor="#ffff"
            android:padding="20dp"
            android:layout_marginTop="25dp"/>

        <Button
            android:id="@+id/btn_during_the_volcanic_eruption"
            android:layout_width="375dp"
            android:layout_height="95dp"
            android:text="During the Eruption"
            android:textSize="22sp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:background="@drawable/blue_warning"
            android:drawableLeft="@drawable/ic_during_volcano"
            android:textColor="#ffff"
            android:padding="20dp"
            android:layout_marginTop="25dp"/>
        <Button
            android:id="@+id/btn_after_the_volcanic_eruption"
            android:layout_width="375dp"
            android:layout_height="95dp"
            android:text="After the Eruption"
            android:textSize="22sp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:background="@drawable/blue_warning"
            android:drawableLeft="@drawable/ic_after_volcano"
            android:textColor="#ffff"
            android:padding="20dp"
            android:layout_marginTop="25dp"/>









    </LinearLayout>

</ScrollView>