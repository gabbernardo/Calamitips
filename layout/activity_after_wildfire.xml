<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".AfterWildfire">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="290dp"
            android:layout_height="100dp"
            android:text="After the Wildfire"
            android:textColor="#ffff"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_wildfire_icon"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:padding="9dp"
            android:background="@drawable/cardview_gradient"/>



        <!-- What you will do after the wildfire -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="20dp"
            android:layout_margin="10dp"
            android:layout_marginTop="25dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/cardview_gradient"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="What to Do After Wildfire"
                    android:layout_marginTop="5dp"
                    android:textColor="#ffff"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="left" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" a. Check with fire officials before attempting to return to your home. Do not return home until authorities say it is safe to do so."
                    android:layout_marginTop="5dp"
                    android:textColor="#ffff"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:textAlignment="gravity"
                    android:padding="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" b. Use an N95 mask to protect yourself from smoke inhalation"
                    android:layout_marginTop="5dp"
                    android:textColor="#ffff"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:textAlignment="gravity"
                    android:padding="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" c. Avoid hot ash, charred trees, smoldering debris, and live embers. The ground may contain heat pockets that can burn you or spark another fire."
                    android:layout_marginTop="5dp"
                    android:textColor="#ffff"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:textAlignment="gravity"
                    android:padding="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" d. Check the attic and throughout the house for hidden burning, sparks and embers."
                    android:layout_marginTop="5dp"
                    android:textColor="#ffff"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:textAlignment="gravity"
                    android:padding="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" e. Send text messages or use social media to reach out to family and friends. Phone systems are often busy following a disaster."
                    android:layout_marginTop="5dp"
                    android:textColor="#ffff"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:textAlignment="gravity"
                    android:padding="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" f. Document property damage with photographs. Conduct an inventory and contact your insurance company for assistance."
                    android:layout_marginTop="5dp"
                    android:textColor="#ffff"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:textAlignment="gravity"
                    android:padding="10dp" />






            </LinearLayout>

        </androidx.cardview.widget.CardView>









    </LinearLayout>

</ScrollView>