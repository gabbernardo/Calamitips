<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".TsunamiActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_Tsunami_PrecautionaryMeasures"
            android:layout_width="300dp"
            android:layout_height="95dp"
            android:textSize="22sp"
            android:text="Tsunami Safety Rules"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:background="@drawable/blue_warning"
            android:drawableLeft="@drawable/ic_tsunami_icon"
            android:textColor="#ffff"
            android:padding="20dp"
            android:layout_marginTop="25dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_before_the_tsunami"
            android:layout_width="375dp"
            android:layout_height="95dp"
            android:text="Before the Tsunami"
            android:textSize="22sp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:background="@drawable/blue_warning"
            android:drawableLeft="@drawable/ic_before_tsunami"
            android:textColor="#ffff"
            android:padding="20dp"
            android:layout_marginTop="25dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_during_the_tsunami"
            android:layout_width="375dp"
            android:layout_height="95dp"
            android:text="During the Tsunami"
            android:textSize="22sp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:background="@drawable/blue_warning"
            android:drawableLeft="@drawable/ic_during_tsunami"
            android:textColor="#ffff"
            android:padding="20dp"
            android:layout_marginTop="25dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_after_the_tsunami"
            android:layout_width="375dp"
            android:layout_height="95dp"
            android:text="After the Tsunami"
            android:textSize="22sp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:background="@drawable/blue_warning"
            android:drawableLeft="@drawable/ic_after_tsunami"
            android:textColor="#ffff"
            android:padding="20dp"
            android:layout_marginTop="25dp"/>









    </LinearLayout>

</ScrollView>