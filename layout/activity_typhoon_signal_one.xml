<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".TyphoonSignalOne">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="230dp"
            android:layout_height="45dp"
            android:text="Signal No. 1"
            android:textColor="#ffff"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_lightning"
            android:background="@drawable/cardview_gradient"/>



        <!--Damage to Structure -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="20dp"
            android:layout_margin="10dp"
            android:layout_marginTop="25dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/cardview_gradient"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Damage to Structure"
                    android:drawableTop="@drawable/ic_building"
                    android:layout_marginTop="5dp"
                    android:textColor="#ffff"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" a. Very light or no damage to high risk structures"
                    android:layout_marginTop="5dp"
                    android:textColor="#ffff"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:textAlignment="gravity"
                    android:padding="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" b. Light to medium and low risk structures"
                    android:layout_marginTop="5dp"
                    android:textColor="#ffff"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:textAlignment="gravity"
                    android:padding="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" c. Slight damage to some houses of very light materials or makeshift structures in exposed communities"
                    android:layout_marginTop="5dp"
                    android:textColor="#ffff"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:textAlignment="gravity"
                    android:padding="10dp" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!--Damage to Vegetation -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="20dp"
            android:layout_margin="10dp"
            android:layout_marginTop="25dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/cardview_gradient"
                android:orientation="vertical">







            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Damage to Vegetation"
                android:drawableTop="@drawable/ic_vegetables"
                android:layout_marginTop="5dp"
                android:textColor="#ffff"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textAlignment="center"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=" a. Some banana plants are tilted, a few downed and leaves are generally damaged."
                android:layout_marginTop="5dp"
                android:textColor="#ffff"
                android:textSize="20sp"
                android:textStyle="normal"
                android:layout_gravity="center"
                android:gravity="left"
                android:textAlignment="gravity"
                android:padding="10dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=" b. Twigs of small trees may be broken."
                android:layout_marginTop="5dp"
                android:textColor="#ffff"
                android:textSize="20sp"
                android:textStyle="normal"
                android:layout_gravity="center"
                android:gravity="left"
                android:textAlignment="gravity"
                android:padding="10dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=" c. Rice crops, however, may suffer significant damage when it is in its flowering stage."
                android:layout_marginTop="5dp"
                android:textColor="#ffff"
                android:textSize="20sp"
                android:textStyle="normal"
                android:layout_gravity="center"
                android:gravity="left"
                android:textAlignment="gravity"
                android:padding="10dp"
                />


            </LinearLayout>

        </androidx.cardview.widget.CardView>














    </LinearLayout>

</ScrollView>