<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".TornadoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_Tornado_PrecautionaryMeasures"
            android:layout_width="300dp"
            android:layout_height="95dp"
            android:textSize="22sp"
            android:text="Tornado Safety Rules"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:background="@drawable/blue_warning"
            android:drawableLeft="@drawable/ic_tornado_sign"
            android:textColor="#ffff"
            android:padding="20dp"
            android:layout_marginTop="25dp"/>

        <Button
            android:id="@+id/btn_before_the_tornado"
            android:layout_width="375dp"
            android:layout_height="95dp"
            android:text="Before the Tornado"
            android:textSize="22sp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:background="@drawable/blue_warning"
            android:drawableLeft="@drawable/ic_before_tornado"
            android:textColor="#ffff"
            android:padding="20dp"
            android:layout_marginTop="25dp"/>

        <Button
            android:id="@+id/btn_during_the_tornado"
            android:layout_width="375dp"
            android:layout_height="95dp"
            android:text="During the Tornado"
            android:textSize="22sp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:background="@drawable/blue_warning"
            android:drawableLeft="@drawable/ic_during_tornado"
            android:textColor="#ffff"
            android:padding="20dp"
            android:layout_marginTop="25dp"/>
        <Button
            android:id="@+id/btn_after_the_tornado"
            android:layout_width="375dp"
            android:layout_height="95dp"
            android:text="After the Tornado"
            android:textSize="22sp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:background="@drawable/blue_warning"
            android:drawableLeft="@drawable/ic_after_tornado"
            android:textColor="#ffff"
            android:padding="20dp"
            android:layout_marginTop="25dp"/>




    </LinearLayout>

</ScrollView>