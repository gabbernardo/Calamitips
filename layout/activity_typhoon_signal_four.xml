<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".TyphoonSignalFour">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="230dp"
            android:layout_height="45dp"
            android:text="Signal No. 4"
            android:textColor="#ffff"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_lightning"
            android:background="@drawable/cardview_gradient"/>

        <!--Damage to Structure -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="20dp"
            android:layout_margin="10dp"
            android:layout_marginTop="25dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/cardview_gradient"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Damage to Structure"
                    android:drawableTop="@drawable/ic_building"
                    android:layout_marginTop="5dp"
                    android:textColor="#ffff"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" a. Very heavy damage to high-risk structures"
                    android:layout_marginTop="5dp"
                    android:textColor="#ffff"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:textAlignment="gravity"
                    android:padding="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" b. Heavy damage to medium risk structures"
                    android:layout_marginTop="5dp"
                    android:textColor="#ffff"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:textAlignment="gravity"
                    android:padding="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" c. Moderate damage to low-risk structures"
                    android:layout_marginTop="5dp"
                    android:textColor="#ffff"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:textAlignment="gravity"
                    android:padding="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" d. Considerable damage to structures of light materials (up to 75% are totally and partially destroyed); complete roof structure failures"
                    android:layout_marginTop="5dp"
                    android:textColor="#ffff"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:textAlignment="gravity"
                    android:padding="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" e. Many houses of medium-built materials are unroofed, some with collapsed walls; extensive damage to doors and windows."
                    android:layout_marginTop="5dp"
                    android:textColor="#ffff"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:textAlignment="gravity"
                    android:padding="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" f. A few houses of first-class materials are partially damaged."
                    android:layout_marginTop="5dp"
                    android:textColor="#ffff"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:textAlignment="gravity"
                    android:padding="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" g. All signs/billboards are blown down."
                    android:layout_marginTop="5dp"
                    android:textColor="#ffff"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:textAlignment="gravity"
                    android:padding="10dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!--Damage to Vegetation -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="20dp"
            android:layout_margin="10dp"
            android:layout_marginTop="25dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/cardview_gradient"
                android:orientation="vertical">



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Damage to Vegetation"
                    android:drawableTop="@drawable/ic_vegetables"
                    android:layout_marginTop="5dp"
                    android:textColor="#ffff"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" a. There is almost total damage to banana plantation."
                    android:layout_marginTop="5dp"
                    android:textColor="#ffff"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:textAlignment="gravity"
                    android:padding="10dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" b. Most mango trees, ipil-ipiland similar types of large trees are downed or broken."
                    android:layout_marginTop="5dp"
                    android:textColor="#ffff"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:textAlignment="gravity"
                    android:padding="10dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" c. Coconut plantation may suffer extensive damage."
                    android:layout_marginTop="5dp"
                    android:textColor="#ffff"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:textAlignment="gravity"
                    android:padding="10dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" d. Rice and corn plantation may suffer severe losses."
                    android:layout_marginTop="5dp"
                    android:textColor="#ffff"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:textAlignment="gravity"
                    android:padding="10dp"
                    />


            </LinearLayout>

        </androidx.cardview.widget.CardView>





    </LinearLayout>

</ScrollView>